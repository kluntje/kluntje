{
  "name": "root",
  "private": true,
  "scripts": {
    "create-package": "lerna create",
    "publish": "lerna run build && lerna publish --conventional-commits -m \"chore(root): Publish packages\"",
    "publish:canary": "lerna run build && lerna publish --canary --force-publish=* -m \"chore(root): Publish canary version\"",
    "build": "lerna run build",
    "doc": "node ./scripts/jsdoc2md/jsdoc2md.js",
    "test": "lerna run test",
    "jest": "jest --watch",
    "bootstrap": "lerna bootstrap",
    "add": "lerna add @kluntje/services --scope=@kluntje/core",
    "eslint": "eslint \"**/*.ts\"",
    "eslint:fix": "eslint \"**/*.ts\" --fix",
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node scripts/verify-commit-msg.js"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/cli": "7.12.1",
    "@babel/core": "7.12.3",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-typescript": "7.12.1",
    "@types/jest": "26.0.15",
    "@types/node": "14.14.0",
    "@typescript-eslint/eslint-plugin": "4.5.0",
    "@typescript-eslint/parser": "4.5.0",
    "chalk": "4.1.0",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.11.0",
    "eslint-config-prettier": "6.13.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.3.8",
    "jest": "26.6.0",
    "jsdoc-babel": "0.5.0",
    "jsdoc-to-markdown": "6.0.1",
    "lerna": "3.22.1",
    "lint-staged": "10.4.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.1",
    "typescript": "4.0.3"
  },
  "dependencies": {
    "rollup": "2.32.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.28.0"
  }
}
